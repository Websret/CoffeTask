{% extends "layouts/default.twig" %}

{% block title %}New client page{% endblock %}

{% block namepage %}Create new client{% endblock %}

{% block content %}
    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-2">New client</h2>

                <form action="/client/add" method="post">

                    {% for key, errors in session.data.errorMessage %}
                        {% for error in errors %}
                            <ul>
                                <li>{{ key }}: {{ error }}</li>
                            </ul>
                        {% endfor %}
                    {% endfor %}
                    {{ session.data.user.errorMessage }}

                    <div class="form-outline mb-2">
                        <input type="text" name="formFirstName" id="formFirstName"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formFirstName">First name</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="text" name="formLastName" id="formLastName"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formLastName">Last name</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="text" name="formMobilePhone" id="formMobilePhone"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formMobilePhone">Mobile phone *format 8(029)</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="email" name="formEmail" id="formEmail"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formEmail">Email</label>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" id="validate" disabled
                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Create
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
{% endblock %}
