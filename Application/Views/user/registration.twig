{% extends "layouts/default.twig" %}

{% block title %}Create employee page{% endblock %}

{% block namepage %}Create new employee{% endblock %}

{% block content %}
    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-2">Create an account</h2>

                <form action="/user/registry" method="post">

                    {% for key, errors in session.data.errorMessage %}
                        {% for error in errors %}
                            <ul>
                                <li>{{ key }}: {{ error }}</li>
                            </ul>
                        {% endfor %}
                    {% endfor %}

                    <div class="form-outline mb-2">
                        <input type="text" name="formFirstName" id="formFirstName"
                               class="form-control form-control-lg"
                               value="{{ session.data.correctField.formFirstName }}">
                        <label class="form-label" for="formFirstName">First Name</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="text" name="formLastName" id="formLastName" class="form-control form-control-lg"
                               value="{{ session.data.correctField.formLastName }}"/>
                        <label class="form-label" for="formLastName">Last Name</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="email" name="formEmail" id="formEmail" class="form-control form-control-lg"
                               value="{{ session.data.correctField.formEmail }}"/>
                        <label class="form-label" for="formEmail">Email</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="email" name="formConfirmEmail" id="formConfirmEmail"
                               class="form-control form-control-lg" value="{{ session.data.correctField.formEmail }}"/>
                        <label class="form-label" for="formConfirmEmail">Confirm Email</label>
                    </div>

                    <div class="form-outline mb-2">
                        <select name="formSelectDepartment" id="formSelectDepartment"
                                class="form-control form-control-lg">
                            {% for key, department in departmentsArray %}
                                {% for dep in department %}
                                    <option value="{{ key }}">{{ dep }}</option>
                                {% endfor %}
                            {% endfor %}
                        </select>
                        <label class="form-label" for="formSelectDepartment">Select department</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="password" name="formPassword" id="formPassword"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formPassword">Password</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="password" name="formConfirmPassword" id="formConfirmPassword"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formConfirmPassword">Confirm password</label>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" id="validate" disabled
                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Create
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
