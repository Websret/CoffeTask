{% extends "layouts/default.twig" %}

{% block title %}New product page{% endblock %}

{% block namepage %}Create new product{% endblock %}

{% block content %}
    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-2">New product</h2>

                <form action="/product/add" method="post">

                    {% for key, errors in session.data.errorMessage %}
                        {% for error in errors %}
                            <ul>
                                <li>{{ key }}: {{ error }}</li>
                            </ul>
                        {% endfor %}
                    {% endfor %}
                    {{ session.data.user.errorMessage }}

                    <div class="form-outline mb-2">
                        <input type="text" name="formProductName" id="formProductName"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formProductName">Product name</label>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="text" name="formProductCost" id="formProductCost"
                               class="form-control form-control-lg"/>
                        <label class="form-label" for="formProductCost">Cost</label>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" id="validate" disabled
                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Create
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
{% endblock %}
